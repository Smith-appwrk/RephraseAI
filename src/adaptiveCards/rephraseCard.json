{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "text": "Rephrased Text",
            "wrap": true,
            "size": "Large",
            "weight": "Bolder"
        },
        {
            "type": "TextBlock",
            "text": "Original: ${originalText}",
            "wrap": true,
            "size": "Medium",
            "weight": "Lighter",
            "isSubtle": true
        },
        {
            "type": "TextBlock",
            "text": "${correctedText}",
            "wrap": true,
            "size": "Medium"
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4"
}